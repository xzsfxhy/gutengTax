<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.shinemo.nsfw.role.entity.Role" table="role">
        <id name="roleId" type="java.lang.String">
            <column name="roleId" length="32"></column>
            <generator class="uuid"></generator>
        </id>
        <property name="name" type="java.lang.String">
            <column name="name" length="20"></column>
        </property>
        <property name="state" type="java.lang.String">
            <column name="state" length="1"></column>
        </property>
        <set name="rolePrivilegeSet" inverse="true" lazy="false" cascade="save-update,delete">
            <key>
                <column name="role_id" not-null="true"></column>
            </key>
            <one-to-many class="com.shinemo.nsfw.role.entity.RolePrivilege" ></one-to-many>
        </set>
    </class>
</hibernate-mapping>